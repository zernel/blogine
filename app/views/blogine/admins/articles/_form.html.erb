<%= simple_form_for([:admins, @article], html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :title %>
  <%= f.association :category %>
  <%= f.input :date, as: :string, input_html: { class: 'date-selector', data: { 'date-format' => 'yyyy-mm-dd' } } %>
  <%= f.input :content %>

  <%= f.submit class: 'btn btn-primary' %>
  <%= link_to "Back", :back, class: 'btn btn-outline-secondary' %>
<% end %>
